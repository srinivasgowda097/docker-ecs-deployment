{
  "family": "ecs-deployment",
  "containerDefinitions": [
    {
      "name": "ecs-deployment",
      "image": "uqlibrary/docker-ecs-deployment:6",
      "cpu": 128,
      "memory": 256,
      "entryPoint": [],
      "environment" : [
        { 
          "name" : "SQS_URL", 
          "value" : "<SQS_URL>" 
        },
        { 
          "name" : "ECS_CLUSTER", 
          "value" : "default" 
        },
        { 
          "name" : "ECS_TIMEOUT", 
          "value" : "300" 
        },
        { 
          "name" : "SLACK_WEBHOOK", 
          "value" : "<SLACK_WEBHOOK>" 
        },
        { 
          "name" : "SLACK_CHANNEL", 
          "value" : "<SLACK_CHANNEL>" 
        }
      ],
      "command": [],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "volumesFrom": [],
      "links": [],
      "mountPoints": [
        {
          "sourceVolume": "aws",
          "containerPath": "/root/.aws",
          "readOnly": false
        }
      ],
      "essential": true
    }
  ],
  "volumes": [
    {
      "name": "aws",
      "host": {
        "sourcePath": "/root/services/ecs-deployment/aws"
      }
    }
  ]
}
